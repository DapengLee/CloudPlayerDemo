<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.single.FloatWindowActivity">

    <FrameLayout
        android:id="@+id/demo_cloud_screen_player_container_view_normal"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <FrameLayout
        android:id="@+id/demo_cloud_screen_player_container_view_float"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_gravity="right|bottom" />

    <FrameLayout
        android:id="@+id/demo_cloud_screen_player_container_view_full"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="floatWindow"
        android:layout_gravity="left|bottom"
        android:text="浮动播放窗口至右下角" />
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.single.MovePlayerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <FrameLayout
                android:id="@+id/demo_cloud_screen_player_container_view_normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <FrameLayout
                android:id="@+id/demo_cloud_screen_player_container_view_left_top"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="left" />

            <FrameLayout
                android:id="@+id/demo_cloud_screen_player_container_view_left_bottom"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="left|bottom" />

            <FrameLayout
                android:id="@+id/demo_cloud_screen_player_container_view_right_bottom"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="right|bottom" />

            <FrameLayout
                android:id="@+id/demo_cloud_screen_player_container_view_right_top"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="right" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/move"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="移动窗口" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/demo_cloud_screen_player_container_view_full"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>
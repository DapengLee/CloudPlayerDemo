<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="gotoSamplePlayer"
        android:text="普通效果" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="gotoAdvanceEffect"
        android:text="高级效果" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="gotoDownload"
        android:text="下载测试" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_blue_dark"
        android:text="选择视频类型" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/youkuvid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="youku video id" />

    <EditText
        android:id="@+id/vid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:hint="video id" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:hint="video password(只有私密托管用户输入才有效)" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_blue_dark"
        android:text="配置client" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/youku_client"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="youku video id" />

    <EditText
        android:id="@+id/client_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:hint="client id" />

    <EditText
        android:id="@+id/client_secret"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:hint="client secret" />
</LinearLayout>
